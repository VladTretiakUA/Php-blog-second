{% extends 'base.twig' %}
{% block body %}
    <div class="container">
        {% if post.image_path is not null %}
            <img src="{{ post.image_path }}" class="img-fluid" style="height: 400px; width: 1200px;" alt="...">
        {% else %}
            <img src="https://dummyimage.com/1200x400/cf36cf/fff&text=Article" class="img-fluid" alt="">
        {% endif %}
            <h1 class="mb-3 mt-3"> {{ post.title|escape }} </h1>
            <div class="mb-3">
                <span class="text-muted">Vlad Tretyak | {{ post.published_date|date("F d, Y")}} </span>
                <p class="mt-3"> {{ post.text|raw }} </p>
            </div>
    </div>
{% endblock %}